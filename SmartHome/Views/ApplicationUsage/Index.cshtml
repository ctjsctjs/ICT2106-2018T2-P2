@model UsageStatistics.Models.ApplicationUsage

@{
    ViewData["Title"] = "Application Usage";
}

<div id="page-wrapper">
   <div class="row">   
        <div class="col-lg-12">
            <h3>Application Statistics</h3>
				
			<div id="stats-login-cont" class="panel panel-default mt30">
			<div class="panel-heading">
				<h3 class="panel-title">Login Statistics</h3>
			</div>
			  <div class="panel-body">
				  <div class="well well-lg well-info">
				
				<div class="row">
					<div class="col-sm-4">
						<p class="text-big">15</p>
							Login Count
					</div>
					<div class="col-sm-4">
						<p class="text-big">15 August</p>
						Last Login
					</div>
					<div class="col-sm-4">
						<p class="text-big">25 mins</p>
						Current Login Duration
					</div>				
				</div>
			</div>
			</div>
			</div>
			<div id="stats-device-cont" class="panel panel-default mt30">
				<div class="panel-heading">
					<h3 class="panel-title">Device page</h3>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-sm-12">
							<div class="dropdown">
								<button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Sort by
								<span class="caret"></span></button>
								<ul class="dropdown-menu">
								<li><a href="#">Device</a></li>
								<li><a href="#">Name</a></li>
								<li><a href="#">Count</a></li>
								</ul>
							</div>
						</div>
					</div>
					<!--Table to display application usage for device usage-->
					<table class="table table-striped">
						<thead>
						  <tr>
							<th>Name</th>
							<th>Type</th>
							<th>Count</th>
						  </tr>
						</thead>
						<tbody>
						  <tr>
							<td>Clement's Fridge</td>
							<td>Fridge</td>
							<td>5</td>
						  </tr>
						  <tr>
							<td>Shan Han's Toaster</td>
							<td>Toaster</td>
							<td>5</td>
						  </tr>
						  <tr>
							<td>Iffah's Fan</td>
							<td>Fan</td>
							<td>6</td>
						  </tr>
						  <tr>
							<td>Yi Ning's Washing Machine</td>
							<td>Washing Machine</td>
							<td>6</td>
						  </tr>
						</tbody>
					  </table>
					  <!--End of table-->
				</div>
			</div>

			<div id="stats-schedule-cont" class="panel panel-default mt30">
			<div class="panel-heading">
				<h3 class="panel-title">Schedule page</h3>
			</div>
				<div class="row">
					<div class="panel-body">
						<div class="col-sm-6">
							<p class="text-big">7</p>
							Access count
						</div>
					</div>
			</div>
		</div>
	</div>
</div>

